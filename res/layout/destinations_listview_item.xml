<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/destinations_listview_item_planet_image"
        android:contentDescription="@string/planet_image"
        android:layout_width="@dimen/planet_image_size"
        android:layout_height="@dimen/planet_image_size"
        android:scaleType="fitCenter"
        android:padding="5dp"/>
    <TextView android:id="@+id/destinations_listview_item_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/destinations_listview_item_planet_image"/>
    <nl.atcomputing.spacetravelagency.views.SoundCheckBox android:id="@+id/destinations_listview_item_planet_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:focusable="false" />
</RelativeLayout>